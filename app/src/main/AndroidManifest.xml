<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.newurl.criminalintenta"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".CrimeListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/> <!-- starter-->
                <category android:name="android.intent.category.LAUNCHER"/> <!-- catch launcher-->
            </intent-filter>
        </activity>

        <activity android:name=".CrimeActivity" android:label="Criminal Intent" />

    </application>

</manifest>
